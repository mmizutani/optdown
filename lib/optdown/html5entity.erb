% entities.each_pair do |e, h|
  <%= e.dump %> => {
%   h.each_pair do |k, v|
    <%= k.dump %> => <%=
      case v
      when Array  then "[ #{v.join(", ")} ]"
      when String then v.dump
      end
    %>,
%   end    
  },
% end
})
